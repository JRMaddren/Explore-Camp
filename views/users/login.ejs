<% layout('layouts/boilerplate')%>
<div class="container display-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1510672981848-a1c4f1cb5ccf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTE0fHxmcmVlJTIwY2FtcGluZ3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
                    alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>

                    <form action="/login" class="validated-form" method="POST" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="username" id="username" name="username" autofocus
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <button class="btn btn-success btn-block mt-4" type="submit">Login</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>